<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <!-- TitleBar -->
    <include layout="@layout/titlebar_layout" />

    <!-- 内容 -->
    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        ></FrameLayout>
    <!-- 按钮-->
    <RadioGroup
        android:id="@+id/rg_main"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="#11000000"
        android:layout_height="70dp">

        <RadioButton
            android:id="@+id/rb_main_1"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/local_video_selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="本地视频"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/rb_main_2"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/local_audio_selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="本地音乐"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/rb_main_3"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/net_video_selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="网络视频"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/rb_main_4"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/net_audio_selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="网络音乐"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/rb_main_5"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/weinxin_logo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="微信语音"
            android:layout_weight="1"/>

    </RadioGroup>

</LinearLayout>
